<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/cv"
             android:focusable="false"
             android:focusableInTouchMode="false"
             android:clickable="false"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="blocksDescendants"
             android:orientation="vertical"
             android:background="@color/stepic_white"
             app:cardCornerRadius="@dimen/guideline_tile_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="120dp"
            android:orientation="horizontal"
            android:padding="@dimen/guideline_left_right_padding_list_item">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/course_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                tools:src="@drawable/ic_course_placeholder"/>


                <LinearLayout
                    android:layout_toRightOf="@id/course_icon"
                    android:paddingLeft="4dp"
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView

                            android:paddingRight="8dp"
                            android:id="@+id/course_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginBottom="2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="Course Name"
                            android:textColor="@color/stepic_regular_text"
                            android:textSize="@dimen/text_header" />

                        <TextView
                            android:paddingRight="8dp"
                            android:id="@+id/course_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:baselineAligned="false"
                            android:maxLines="4"
                            tools:text="Long text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсong text В курсе будут разобраны осно text В курсе будут разобраны осно text В кtext В курсе будут разобраны осно text В курсе будут разобраны осно text В кtext В курсе будут разобраны осно text В курсе будут разобраны осно text В кtext В курсе будут разобраны осно text В курсе будут разобраны осно text В кtext В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны осно  text В курсе будут разобраны осно text В курсе будут разобраны осно text В курсе будут разобраны основные алгоритмические методы: жадные алгоритмы, «разделяй и властвуй», динамическое программирование. Помимо теоретических основ, будут рассмотрены тонкости реализации рассмотренных алгоритмов на языках C++ и Python. Слушателям будет предложено реализовать большинство разобранных в курсе алгоритмов. Решения будут проверяться тестирующей системой на тщательно подобранных тестах."
                            android:textColor="@color/stepic_regular_text"
                            android:textSize="@dimen/text_height" />
                </LinearLayout>

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/linear"
                    android:layout_toRightOf="@id/course_icon"
                    android:paddingLeft="4dp"
                    android:id="@+id/course_date_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="first date and second date"
                    android:textColor="@color/stepic_weak_text"
                    android:textSize="@dimen/text_height" />

            </RelativeLayout>

        <View
            android:id="@+id/grey_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver" />
    </LinearLayout>
</FrameLayout>
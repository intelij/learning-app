<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bold_text">
        <item name="fontPath">fonts/NotoSans-Bold.ttf</item>
    </style>


    <style name="regular_text">
        <item name="fontPath">fonts/NotoSans-Regular.ttf</item>
    </style>

    <style name="italic_text">
        <item name="fontPath">fonts/NotoSans-Italic.ttf</item>
    </style>

    <style name="bolditalic_text">
        <item name="fontPath">fonts/NotoSans-BoldItalic.ttf</item>
    </style>


    <style name="bold_white_text" parent="@style/bold_text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="regular_white_text" parent="@style/regular_text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="cv_text_title" parent="regular_text">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

</resources>